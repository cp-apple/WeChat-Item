/* pages/index/index.wxss */
/* 搜索区 */
.searchArea{
  padding:10px 15rpx;
  width: 100%;
  background-color: #2ba4e3;
  box-sizing: border-box
}
.searchArea form{
  position: relative;
}
.searchArea input{
  background-color: #fff;
  padding-left:2em; 
  border-radius: 3px;
  height: 60rpx;
  font-size: 12px;
}
.searchArea image{
  position: absolute;
  top: -45rpx;
  left: 10rpx;
  z-index: 99;
  width: 30rpx;
  height:30rpx;
}

/* 品类展示区 */
.cateBox{
  padding: 20rpx;
  padding-bottom: 0;
  overflow: hidden;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.cateItem{
  margin-bottom: 3.5%;
  width: 31%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
  padding: 30rpx 0;
  box-sizing: border-box;
}
.cateItem:nth-child(3n){
  margin-right: 0;
}
.cateItem image{
  width: 60rpx;
  height: 80rpx;
}        

/* 其他服务 */
.otherCateBox{
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}

.borderBox{
  flex: 1;
  border: 1px solid #2ba4e3;
  padding: 3px;
  margin: 20rpx;
  border-radius: 3px;
}
.otherCateItem{
  padding: 10px 10rpx;
  background-color: #2ba4e3;
  color: #fff;
  text-align: center;
  border-radius: 3px;  
}
.otherCateItem image{
  margin-right: 10rpx;
  width: 30rpx;
  height: 30rpx;
}

.otherCateTit{
  font-size: 16px;
}
.otherCateSurvey{
  display: block;
  font-size: 12px;
}






