/* 个人中心 */
page{
  background-color: #f2f2f2;
}
.myInfo{
  display: flex;
  flex-direction: column;
}
.myInfo view{
  background-color: #fff;
}
.headImg{
  margin: 15px 0;
}
.hImg{
  float: right;
  margin-right: 30rpx;
  width: 120rpx;
  height: 120rpx;
}
.rArrow{
  position: absolute;
  top: 48%;
  right: 20rpx;
  float: right;
  width: 15rpx;
  height: 25rpx;
}

.item{
  display: flex;
  align-items: center;
  position: relative;
  padding: 12px 20rpx;
  border-bottom: 1px solid #eee;
  overflow: hidden;
}
.modifyInfo{
  margin-top: 15px;
  border-top: 1px solid #eee;  
}
.item text{
  font-size: 15px;

}
.tit{
  flex: 1;
}
.con{
  justify-content: right;
}


